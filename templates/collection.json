{
  "sections": {
    "banner": {
      "type": "collection-banner",
      "settings": {
        "show_collection_description": false,
        "show_collection_image": true
      }
    },
    "main": {
      "type": "main-collection",
      "settings": {
        "products_per_page": 12,
        "columns_desktop": 4,
        "enable_filtering": true,
        "filter_type": "drawer",
        "enable_sorting": true
      }
    },
    "description": {
      "type": "collection-description",
      "settings": {
        "show_title": false,
        "text_alignment": "left",
        "max_width": 900,
        "padding_top": 60,
        "padding_bottom": 60
      }
    }
  },
  "order": [
    "banner",
    "main",
    "description"
  ]
}
