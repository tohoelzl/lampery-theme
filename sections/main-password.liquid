<style>
  .password-page {
    min-height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    position: relative;
    overflow: hidden;
    background: var(--color-background);
  }

  /* Decorative background elements */
  .password-page::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -30%;
    width: 80%;
    height: 150%;
    background: radial-gradient(ellipse, var(--color-primary-light, #A8B59E) 0%, transparent 70%);
    opacity: 0.15;
    pointer-events: none;
  }

  .password-page::after {
    content: '';
    position: absolute;
    bottom: -30%;
    left: -20%;
    width: 60%;
    height: 100%;
    background: radial-gradient(ellipse, var(--color-primary, #8B9A7E) 0%, transparent 70%);
    opacity: 0.1;
    pointer-events: none;
  }

  .password-container {
    width: 100%;
    max-width: 480px;
    text-align: center;
    position: relative;
    z-index: 1;
  }

  .password-card {
    background: white;
    border-radius: 1.5rem;
    padding: 3rem 2.5rem;
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.06), 0 1px 2px rgba(0, 0, 0, 0.04);
  }

  .password-icon {
    width: 64px;
    height: 64px;
    margin: 0 auto 1.5rem;
    background: var(--color-background-alt, #F5F3EF);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-primary, #8B9A7E);
  }

  .password-icon svg {
    width: 28px;
    height: 28px;
  }

  .password-title {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0 0 0.75rem;
    color: var(--color-text, #2D2D2D);
  }

  .password-subtitle {
    font-size: 1rem;
    color: var(--color-text-muted, #6B6B6B);
    margin: 0 0 2rem;
    line-height: 1.6;
  }

  .password-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .password-input-wrapper {
    position: relative;
  }

  .password-input {
    width: 100%;
    padding: 1rem 1.25rem;
    font-size: 1rem;
    font-family: inherit;
    border: 2px solid var(--color-border, #E8E4DE);
    border-radius: 0.75rem;
    background: var(--color-background, #FAF9F7);
    color: var(--color-text, #2D2D2D);
    transition: border-color 0.2s ease, box-shadow 0.2s ease;
    outline: none;
  }

  .password-input:focus {
    border-color: var(--color-primary, #8B9A7E);
    box-shadow: 0 0 0 3px rgba(139, 154, 126, 0.15);
  }

  .password-input::placeholder {
    color: var(--color-text-muted, #6B6B6B);
  }

  .password-submit {
    width: 100%;
    padding: 1rem 1.5rem;
    font-size: 1rem;
    font-weight: 600;
    font-family: inherit;
    border: none;
    border-radius: 0.75rem;
    background: var(--color-primary, #8B9A7E);
    color: white;
    cursor: pointer;
    transition: background 0.2s ease, transform 0.1s ease;
  }

  .password-submit:hover {
    background: var(--color-primary-light, #A8B59E);
  }

  .password-submit:active {
    transform: scale(0.98);
  }

  .password-error {
    background: #FEF2F2;
    border: 1px solid #FECACA;
    color: #DC2626;
    padding: 0.875rem 1rem;
    border-radius: 0.5rem;
    font-size: 0.875rem;
    margin-top: 0.5rem;
  }

  .password-footer {
    margin-top: 2rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--color-border, #E8E4DE);
  }

  .password-admin-link {
    font-size: 0.875rem;
    color: var(--color-text-muted, #6B6B6B);
    margin: 0;
  }

  .password-admin-link a {
    color: var(--color-primary, #8B9A7E);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease;
  }

  .password-admin-link a:hover {
    color: var(--color-text, #2D2D2D);
  }

  .password-social {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-top: 1.5rem;
  }

  .password-social a {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    background: var(--color-background-alt, #F5F3EF);
    color: var(--color-text-muted, #6B6B6B);
    transition: background 0.2s ease, color 0.2s ease;
  }

  .password-social a:hover {
    background: var(--color-primary, #8B9A7E);
    color: white;
  }

  .password-social svg {
    width: 18px;
    height: 18px;
  }

  @media (max-width: 640px) {
    .password-page {
      padding: 1.5rem;
      min-height: 70vh;
    }

    .password-card {
      padding: 2rem 1.5rem;
      border-radius: 1rem;
    }

    .password-title {
      font-size: 1.25rem;
    }
  }
</style>

<div class="password-page">
  <div class="password-container">
    <div class="password-card">
      <div class="password-icon">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
          <path d="M7 11V7a5 5 0 0 1 10 0v4"/>
        </svg>
      </div>

      <h1 class="password-title">{{ section.settings.title | default: 'Wir öffnen bald' }}</h1>
      <p class="password-subtitle">{{ section.settings.subtitle | default: 'Unser Shop wird gerade vorbereitet. Gib das Passwort ein, um frühen Zugang zu erhalten.' }}</p>

      {% form 'storefront_password' %}
        <div class="password-form">
          <div class="password-input-wrapper">
            <input
              type="password"
              name="password"
              id="password"
              class="password-input"
              placeholder="Passwort eingeben"
              aria-label="Passwort"
              autocomplete="current-password"
              required
            >
          </div>
          <button type="submit" class="password-submit">
            Eintreten
          </button>
        </div>

        {% if form.errors %}
          <div class="password-error">
            Falsches Passwort. Bitte versuche es erneut.
          </div>
        {% endif %}
      {% endform %}

      <div class="password-footer">
        <p class="password-admin-link">
          Bist du der Shop-Inhaber?
          <a href="/admin">Hier einloggen</a>
        </p>

        {% if settings.social_instagram_link != blank or settings.social_facebook_link != blank or settings.social_tiktok_link != blank %}
          <div class="password-social">
            {% if settings.social_instagram_link != blank %}
              <a href="{{ settings.social_instagram_link }}" target="_blank" rel="noopener" aria-label="Instagram">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <rect x="2" y="2" width="20" height="20" rx="5" ry="5"/>
                  <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/>
                  <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/>
                </svg>
              </a>
            {% endif %}
            {% if settings.social_facebook_link != blank %}
              <a href="{{ settings.social_facebook_link }}" target="_blank" rel="noopener" aria-label="Facebook">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/>
                </svg>
              </a>
            {% endif %}
            {% if settings.social_tiktok_link != blank %}
              <a href="{{ settings.social_tiktok_link }}" target="_blank" rel="noopener" aria-label="TikTok">
                <svg viewBox="0 0 24 24" fill="currentColor">
                  <path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-5.2 1.74 2.89 2.89 0 0 1 2.31-4.64 2.93 2.93 0 0 1 .88.13V9.4a6.84 6.84 0 0 0-1-.05A6.33 6.33 0 0 0 5 20.1a6.34 6.34 0 0 0 10.86-4.43v-7a8.16 8.16 0 0 0 4.77 1.52v-3.4a4.85 4.85 0 0 1-1-.1z"/>
                </svg>
              </a>
            {% endif %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Password Page",
  "tag": "section",
  "class": "main-password-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Titel",
      "default": "Wir öffnen bald"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Untertitel",
      "default": "Unser Shop wird gerade vorbereitet. Gib das Passwort ein, um frühen Zugang zu erhalten."
    }
  ]
}
{% endschema %}
