{% comment %}
  Product Slider Section - Horizontal scrolling product carousel with navigation arrows
  Based on featured-collection but with slider functionality
{% endcomment %}

{%- liquid
  assign product_source = section.settings.product_source | default: 'collection'
  assign collection = collections[section.settings.collection]
  assign products_to_show = section.settings.products_to_show
  assign visible_products = section.settings.visible_products | default: 4
  assign card_size = section.settings.card_size | default: 'medium'
  assign card_gap = section.settings.card_gap | default: 24
  assign text_align = section.settings.text_alignment | default: 'center'

  case card_size
    when 'small'
      assign card_width = 220
    when 'medium'
      assign card_width = 280
    when 'large'
      assign card_width = 340
    when 'extra_large'
      assign card_width = 400
    when 'xxl'
      assign card_width = 480
    else
      assign card_width = 280
  endcase

  comment
    Calculate slider width:
    slider_width = (card_width * visible_products) + (card_gap * (visible_products - 1))
  endcomment
  assign gaps_count = visible_products | minus: 1
  assign total_gaps = gaps_count | times: card_gap
  assign total_cards = visible_products | times: card_width
  assign slider_width = total_cards | plus: total_gaps

  comment
    Calculate total container width:
    container_width = slider_width + 2 arrows (3rem = 48px each) + 2 gaps (1.5rem = 24px each) + padding (64px)
    = slider_width + 96 + 48 + 64 = slider_width + 208
  endcomment
  assign container_width = slider_width | plus: 208

  assign section_id = 'product-slider-' | append: section.id

  comment
    Determine which products to show based on source setting
  endcomment
  assign has_products = false
  if product_source == 'all'
    if collections.all.products.size > 0
      assign has_products = true
    endif
  elsif collection != blank and collection.products.size > 0
    assign has_products = true
  endif
-%}

<section class="product-slider-section" style="--card-width: {{ card_width }}px; --card-gap: {{ card_gap }}px; --slider-width: {{ slider_width }}px; --container-width: {{ container_width }}px; --padding-top: {{ section.settings.padding_top }}px; --padding-bottom: {{ section.settings.padding_bottom }}px;">
  <div class="product-slider-container">

    {% comment %} Section Header {% endcomment %}
    <div class="product-slider-header product-slider-header--{{ text_align }}">
      {% if section.settings.subtitle != blank %}
        <span class="product-slider-subtitle">{{ section.settings.subtitle }}</span>
      {% endif %}
      <h2 class="product-slider-title">{{ section.settings.title }}</h2>
    </div>

    {% if has_products %}
      {% comment %} Outer wrapper - flex container with arrows and slider {% endcomment %}
      <div class="product-slider-outer">
        {% comment %} Left Arrow {% endcomment %}
        <button type="button" class="product-slider-arrow product-slider-arrow--prev" data-slider-prev="{{ section_id }}" aria-label="Vorherige Produkte">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
            <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>

        {% comment %} Slider Container - fixed width based on visible_products {% endcomment %}
        <div class="product-slider" id="{{ section_id }}">
          {% if product_source == 'all' %}
            {% for product in collections.all.products limit: products_to_show %}
              <div class="product-slider__item">
                {% render 'product-card', product: product %}
              </div>
            {% endfor %}
          {% else %}
            {% for product in collection.products limit: products_to_show %}
              <div class="product-slider__item">
                {% render 'product-card', product: product %}
              </div>
            {% endfor %}
          {% endif %}
        </div>

        {% comment %} Right Arrow {% endcomment %}
        <button type="button" class="product-slider-arrow product-slider-arrow--next" data-slider-next="{{ section_id }}" aria-label="Naechste Produkte">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
            <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
      </div>

      {% comment %} View All Link {% endcomment %}
      {% if section.settings.show_view_all %}
        <div class="product-slider-footer">
          {% if product_source == 'all' %}
            <a href="{{ routes.all_products_collection_url }}" class="btn-secondary">
              {{ section.settings.view_all_text | default: 'Alle Produkte ansehen' }}
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none">
                <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </a>
          {% else %}
            <a href="{{ collection.url }}" class="btn-secondary">
              {{ section.settings.view_all_text | default: 'Alle Produkte ansehen' }}
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none">
                <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </a>
          {% endif %}
        </div>
      {% endif %}
    {% else %}
      {% comment %} Placeholder when no products available {% endcomment %}
      <div class="product-slider-outer">
        <div class="product-slider-arrow product-slider-arrow--prev" style="opacity: 0.3;"></div>
        <div class="product-slider" id="{{ section_id }}">
          {% for i in (1..visible_products) %}
            <div class="product-slider__item">
              <div class="product-slider__placeholder"></div>
            </div>
          {% endfor %}
        </div>
        <div class="product-slider-arrow product-slider-arrow--next" style="opacity: 0.3;"></div>
      </div>
      <p class="product-slider-empty">
        {% if product_source == 'all' %}
          Noch keine Produkte vorhanden.
        {% else %}
          Waehle eine Kollektion in den Theme-Einstellungen aus.
        {% endif %}
      </p>
    {% endif %}

  </div>
</section>

<style>
  /* Product Slider Section */
  .product-slider-section {
    width: 100%;
    padding-top: var(--padding-top, 48px);
    padding-bottom: var(--padding-bottom, 48px);
  }

  /* Container - width based on slider + arrows + gaps */
  .product-slider-container {
    max-width: var(--container-width);
    margin: 0 auto;
    padding: 0 1rem;
  }

  @media (min-width: 1024px) {
    .product-slider-container {
      padding: 0 2rem;
    }
  }

  /* Header */
  .product-slider-header {
    margin-bottom: 1.5rem;
  }

  @media (min-width: 1024px) {
    .product-slider-header {
      margin-bottom: 2rem;
    }
  }

  .product-slider-header--left {
    text-align: left;
  }

  .product-slider-header--center {
    text-align: center;
  }

  .product-slider-header--right {
    text-align: right;
  }

  .product-slider-subtitle {
    display: block;
    font-size: 0.8125rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-primary);
    margin-bottom: 0.5rem;
  }

  .product-slider-title {
    font-family: var(--font-heading-family);
    font-size: 1.5rem;
    font-weight: 600;
    line-height: 1.2;
    margin: 0;
    color: var(--color-text);
  }

  @media (min-width: 768px) {
    .product-slider-title {
      font-size: 1.75rem;
    }
  }

  @media (min-width: 1024px) {
    .product-slider-title {
      font-size: 2rem;
    }
  }

  /* Outer container - flex layout with arrows and slider */
  .product-slider-outer {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
  }

  @media (min-width: 1024px) {
    .product-slider-outer {
      gap: 1.5rem;
    }
  }

  /* Navigation Arrows */
  .product-slider-arrow {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    border: 2px solid {{ section.settings.arrow_border_color | default: '#e5e5e5' }};
    border-radius: 50%;
    background: {{ section.settings.arrow_bg_color | default: '#ffffff' }};
    color: {{ section.settings.arrow_icon_color | default: 'var(--color-text)' }};
    cursor: pointer;
    transition: color 0.25s ease, border-color 0.25s ease;
    position: relative;
    overflow: hidden;
    z-index: 1;
  }

  @media (min-width: 1024px) {
    .product-slider-arrow {
      width: 3rem;
      height: 3rem;
    }
  }

  /* Arrow hover effect pseudo-element */
  .product-slider-arrow::before {
    content: '';
    position: absolute;
    z-index: -1;
    background: {{ section.settings.arrow_hover_bg_color | default: 'var(--color-text)' }};
    transition: all 0.3s ease-out;
    border-radius: 50%;
  }

  {% case section.settings.arrow_hover_effect %}
    {% when 'none' %}
  /* No animation - instant color change */
  .product-slider-arrow::before {
    display: none;
  }
  .product-slider-arrow:hover:not(:disabled) {
    background: {{ section.settings.arrow_hover_bg_color | default: 'var(--color-text)' }};
    color: {{ section.settings.arrow_hover_icon_color | default: '#ffffff' }};
    border-color: {{ section.settings.arrow_hover_bg_color | default: 'var(--color-text)' }};
  }

    {% when 'fill_center' %}
  /* Fill from center (radial) */
  .product-slider-arrow::before {
    inset: 0;
    transform: scale(0);
  }
  .product-slider-arrow:hover:not(:disabled)::before {
    transform: scale(1);
  }
  .product-slider-arrow:hover:not(:disabled) {
    color: {{ section.settings.arrow_hover_icon_color | default: '#ffffff' }};
    border-color: {{ section.settings.arrow_hover_bg_color | default: 'var(--color-text)' }};
  }

    {% when 'fill_left' %}
  /* Fill from left */
  .product-slider-arrow::before {
    inset: 0;
    border-radius: 0;
    transform: translateX(-100%);
  }
  .product-slider-arrow:hover:not(:disabled)::before {
    transform: translateX(0);
  }
  .product-slider-arrow:hover:not(:disabled) {
    color: {{ section.settings.arrow_hover_icon_color | default: '#ffffff' }};
    border-color: {{ section.settings.arrow_hover_bg_color | default: 'var(--color-text)' }};
  }

    {% when 'fill_right' %}
  /* Fill from right */
  .product-slider-arrow::before {
    inset: 0;
    border-radius: 0;
    transform: translateX(100%);
  }
  .product-slider-arrow:hover:not(:disabled)::before {
    transform: translateX(0);
  }
  .product-slider-arrow:hover:not(:disabled) {
    color: {{ section.settings.arrow_hover_icon_color | default: '#ffffff' }};
    border-color: {{ section.settings.arrow_hover_bg_color | default: 'var(--color-text)' }};
  }

    {% when 'fill_bottom' %}
  /* Fill from bottom */
  .product-slider-arrow::before {
    inset: 0;
    border-radius: 0;
    transform: translateY(100%);
  }
  .product-slider-arrow:hover:not(:disabled)::before {
    transform: translateY(0);
  }
  .product-slider-arrow:hover:not(:disabled) {
    color: {{ section.settings.arrow_hover_icon_color | default: '#ffffff' }};
    border-color: {{ section.settings.arrow_hover_bg_color | default: 'var(--color-text)' }};
  }

    {% when 'fill_top' %}
  /* Fill from top */
  .product-slider-arrow::before {
    inset: 0;
    border-radius: 0;
    transform: translateY(-100%);
  }
  .product-slider-arrow:hover:not(:disabled)::before {
    transform: translateY(0);
  }
  .product-slider-arrow:hover:not(:disabled) {
    color: {{ section.settings.arrow_hover_icon_color | default: '#ffffff' }};
    border-color: {{ section.settings.arrow_hover_bg_color | default: 'var(--color-text)' }};
  }

    {% else %}
  /* Default: fill from center */
  .product-slider-arrow::before {
    inset: 0;
    transform: scale(0);
  }
  .product-slider-arrow:hover:not(:disabled)::before {
    transform: scale(1);
  }
  .product-slider-arrow:hover:not(:disabled) {
    color: {{ section.settings.arrow_hover_icon_color | default: '#ffffff' }};
    border-color: {{ section.settings.arrow_hover_bg_color | default: 'var(--color-text)' }};
  }
  {% endcase %}

  .product-slider-arrow:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  .product-slider-arrow:disabled:hover {
    background: {{ section.settings.arrow_bg_color | default: '#ffffff' }};
    color: {{ section.settings.arrow_icon_color | default: 'var(--color-text)' }};
    border-color: {{ section.settings.arrow_border_color | default: '#e5e5e5' }};
  }

  .product-slider-arrow:disabled::before {
    display: none;
  }

  /* Slider - fixed width based on visible products */
  .product-slider {
    width: var(--slider-width);
    max-width: 100%;
    display: flex;
    gap: var(--card-gap, 24px);
    overflow-x: auto;
    scroll-behavior: smooth;
    scroll-snap-type: x mandatory;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
    -ms-overflow-style: none;
    padding: 0.5rem 0;
  }

  .product-slider::-webkit-scrollbar {
    display: none;
  }

  /* Slider Item */
  .product-slider__item {
    flex: 0 0 var(--card-width, 280px);
    scroll-snap-align: start;
  }


  /* Placeholder */
  .product-slider__placeholder {
    aspect-ratio: 3/4;
    background: var(--color-background-alt, #f5f5f5);
    border-radius: 1rem;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  /* Footer */
  .product-slider-footer {
    text-align: center;
    margin-top: 2rem;
  }

  @media (min-width: 1024px) {
    .product-slider-footer {
      margin-top: 2.5rem;
    }
  }

  .product-slider-footer .btn-secondary {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }

  /* Empty State */
  .product-slider-empty {
    text-align: center;
    color: var(--color-text-muted);
    margin-top: 2rem;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const sliderId = '{{ section_id }}';
    const slider = document.getElementById(sliderId);
    const prevBtn = document.querySelector(`[data-slider-prev="${sliderId}"]`);
    const nextBtn = document.querySelector(`[data-slider-next="${sliderId}"]`);

    if (!slider || !prevBtn || !nextBtn) return;

    const cardWidth = {{ card_width }};
    const cardGap = {{ card_gap }};
    const scrollAmount = cardWidth + cardGap;

    function updateButtons() {
      const maxScroll = slider.scrollWidth - slider.clientWidth;
      prevBtn.disabled = slider.scrollLeft <= 0;
      nextBtn.disabled = slider.scrollLeft >= maxScroll - 1;
    }

    prevBtn.addEventListener('click', function() {
      slider.scrollBy({ left: -scrollAmount, behavior: 'smooth' });
    });

    nextBtn.addEventListener('click', function() {
      slider.scrollBy({ left: scrollAmount, behavior: 'smooth' });
    });

    slider.addEventListener('scroll', updateButtons);
    window.addEventListener('resize', updateButtons);

    // Initial state
    updateButtons();
  });
</script>

