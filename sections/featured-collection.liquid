      "type": "range",
      "id": "card_gap",
      "min": 8,
      "max": 64,
      "step": 4,
      "default": 24,
      "unit": "px",
      "label": "Abstand zwischen Karten"
    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "default": true,
      "label": "\"Alle ansehen\" Button anzeigen"
    },
    {
      "type": "text",
      "id": "view_all_text",
      "label": "Button Text",
      "default": "Alle Produkte ansehen"
    }
  ],
  "presets": [
    {
      "name": "Produkt-Kollektion",
      "category": "Collection"
    }
  ]
}
{% endschema %}
