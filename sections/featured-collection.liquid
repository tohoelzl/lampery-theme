    },
    {
      "type": "select",
      "id": "card_size",
      "label": "Produktkarten-Groesse",
      "options": [
        {
          "value": "small",
          "label": "Klein (220px)"
        },
        {
          "value": "medium",
          "label": "Mittel (280px)"
        },
        {
          "value": "large",
          "label": "Gross (340px)"
        },
        {
          "value": "extra_large",
          "label": "Sehr gross (400px)"
        },
        {
          "value": "xxl",
          "label": "XXL (480px)"
        }
