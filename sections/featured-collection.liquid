{% comment %}
  Featured Collection Section - Converted from WooCommerce front-page.php Product Sections
  Shopify Native: Uses collection object instead of WP_Query
{% endcomment %}

{%- liquid
  assign collection = collections[section.settings.collection]
  assign products_to_show = section.settings.products_to_show
  assign columns = section.settings.columns
  assign card_size = section.settings.card_size | default: 'medium'
  assign card_gap = section.settings.card_gap | default: 24

  comment
    Card width in pixels based on size setting
    These are minimum widths per card
  endcomment
  case card_size
    when 'small'
      assign card_width = 220
      assign mobile_columns = 2
    when 'medium'
      assign card_width = 280
      assign mobile_columns = 2
    when 'large'
      assign card_width = 340
      assign mobile_columns = 2
    when 'extra_large'
      assign card_width = 400
      assign mobile_columns = 1
    when 'xxl'
      assign card_width = 480
      assign mobile_columns = 1
    else
      assign card_width = 280
      assign mobile_columns = 2
  endcase

  comment
    Calculate container width automatically:
    container = (card_width * columns) + (gap * (columns - 1)) + padding (64px for 2rem each side)
  endcomment
  assign gaps_count = columns | minus: 1
  assign total_gaps = gaps_count | times: card_gap
  assign total_cards = columns | times: card_width
  assign container_padding = 64
  assign container_max = total_cards | plus: total_gaps | plus: container_padding
-%}

<section id="featured" class="section-lg featured-collection-section" style="--container-max: {{ container_max }}px; --card-width: {{ card_width }}px;">
  <div class="featured-collection-container">

    {% comment %} Section Header {% endcomment %}
    <div class="section-header">
      <span class="inline-block text-sm font-medium text-primary uppercase tracking-wider mb-3">
        {{ section.settings.subtitle }}
      </span>
      <h2 class="section-title">{{ section.settings.title }}</h2>
    </div>

    {% if collection != blank and collection.products.size > 0 %}
      {% comment %} Products Grid - Using Shopify native product object {% endcomment %}
      <div class="featured-collection-grid featured-collection-grid--{{ card_size }}" style="--card-gap: {{ card_gap }}px;">
        {% for product in collection.products limit: products_to_show %}
          {% render 'product-card', product: product %}
        {% endfor %}
      </div>

      {% comment %} View All Link {% endcomment %}
      {% if section.settings.show_view_all %}
        <div class="text-center mt-12">
          <a href="{{ collection.url }}" class="btn-secondary">
            {{ section.settings.view_all_text | default: 'Alle Produkte ansehen' }}
            {% render 'icon-arrow-right', class: 'w-4 h-4 ml-2' %}
          </a>
        </div>
      {% endif %}
    {% else %}
      {% comment %} Placeholder when no collection is selected {% endcomment %}
      <div class="grid grid-cols-2 lg:grid-cols-{{ columns }} gap-6 lg:gap-8">
        {% for i in (1..products_to_show) %}
          <div class="aspect-product rounded-xl bg-background-alt animate-pulse"></div>
        {% endfor %}
      </div>
      <p class="text-center text-text-muted mt-8">WÃ¤hle eine Kollektion in den Theme-Einstellungen aus.</p>
    {% endif %}

  </div>
</section>

<style>
  /* Featured Collection Section - full width wrapper */
  .featured-collection-section {
    width: 100%;
  }

  /* Featured Collection Container - auto-calculated based on card size, columns, and gap */
  .featured-collection-container {
    max-width: var(--container-max, 1400px);
    margin-left: auto;
    margin-right: auto;
    padding: 0 1rem;
  }

  @media (min-width: 1024px) {
    .featured-collection-container {
      padding: 0 2rem;
    }
  }

  /* Featured Collection Grid */
  .featured-collection-grid {
    display: grid;
    grid-template-columns: repeat({{ columns }}, minmax(var(--card-width, 280px), 1fr));
    gap: var(--card-gap, 24px);
  }

  /* Mobile - always use mobile columns */
  @media (max-width: 1023px) {
    .featured-collection-grid {
      grid-template-columns: repeat({{ mobile_columns }}, 1fr);
    }
  }
</style>

{% schema %}
{
  "name": "Produkt-Kollektion",
  "class": "section-featured-collection",
  "settings": [
    {
      "type": "header",
      "content": "Inhalt"
    },
