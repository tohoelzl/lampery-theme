{% comment %}
  Search Overlay Snippet - Converted from WooCommerce header.php Search Overlay
{% endcomment %}

<div
  x-show="searchOpen"
  x-cloak
  x-transition:enter="transition ease-out duration-300"
  x-transition:enter-start="opacity-0 -translate-y-2"
  x-transition:enter-end="opacity-100 translate-y-0"
  x-transition:leave="transition ease-in duration-200"
  x-transition:leave-start="opacity-100 translate-y-0"
  x-transition:leave-end="opacity-0 -translate-y-2"
  class="fixed inset-x-0 top-16 lg:top-20 bg-background border-b border-border shadow-md z-40"
  @click.outside="searchOpen = false"
  @keydown.escape.window="searchOpen = false"
>
  <div class="container mx-auto px-4 py-6">
    <form
      action="{{ routes.search_url }}"
      method="get"
      role="search"
      class="relative"
    >
      <input
        type="search"
        name="q"
        placeholder="{{ 'search.placeholder' | t }}"
        class="w-full px-4 py-3 pr-12 text-lg bg-background-alt border border-border rounded-lg focus:outline-none focus:border-primary transition-colors"
        x-ref="searchInput"
        @keydown.enter="$el.form.submit()"
        autocomplete="off"
        autocorrect="off"
        autocapitalize="off"
        spellcheck="false"
      >

      {% comment %} Filter to products only {% endcomment %}
      <input type="hidden" name="type" value="product">

      <button
        type="submit"
        class="absolute right-4 top-1/2 -translate-y-1/2 text-text-muted hover:text-primary transition-colors"
        aria-label="{{ 'search.submit' | t }}"
      >
        {% render 'icon-search', class: 'w-5 h-5' %}
      </button>
    </form>

    {% comment %} Popular Searches {% endcomment %}
    {% if linklists.popular-searches.links.size > 0 %}
      <div class="mt-4">
        <span class="text-xs text-text-muted uppercase tracking-wider">{{ 'search.popular' | t }}</span>
        <div class="flex flex-wrap gap-2 mt-2">
          {% for link in linklists.popular-searches.links limit: 5 %}
            <a
              href="{{ link.url }}"
              class="text-sm px-3 py-1 bg-background-alt rounded-full hover:bg-primary hover:text-white transition-colors"
              @click="searchOpen = false"
            >
              {{ link.title }}
            </a>
          {% endfor %}
        </div>
      </div>
    {% endif %}
  </div>
</div>
